    {
      "name": "Groups - Create",
      "request": {
        "method": "POST",
        "header": [ {"key": "Content-Type", "value": "application/json"} ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Premium Users\",\n  \"description\": \"High value customers\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/groups",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "groups"]
        }
      },
      "event": [
        {"listen":"test","script":{"type":"text/javascript","exec":["pm.test('status 200', function () { pm.response.to.have.status(200); });","pm.test('has group_id', function(){ var j = pm.response.json(); pm.expect(j.data.group_id).to.exist; pm.collectionVariables.set('groupId', j.data.group_id); });"]}}
      ]
    },
    {
      "name": "Groups - Add Member",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/groups/{{groupId}}/members/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "groups", "{{groupId}}", "members", "{{userId}}"]
        }
      },
      "event": [
        {"listen":"test","script":{"type":"text/javascript","exec":["pm.test('status 200', function () { pm.response.to.have.status(200); });"]}}
      ]
    },
    {
      "name": "Campaigns - Create (scheduled)",
      "request": {
        "method": "POST",
        "header": [ {"key": "Content-Type", "value": "application/json"} ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New Year Promo\",\n  \"type_key\": \"promo.offer\",\n  \"channel\": \"inapp\",\n  \"segment_group_id\": {{groupId}},\n  \"scheduled_at\": \"{{scheduledAt}}\",\n  \"priority\": \"low\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/campaigns",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "campaigns"]
        }
      },
      "event": [
        {"listen":"test","script":{"type":"text/javascript","exec":["pm.test('status 200', function () { pm.response.to.have.status(200); });","pm.test('has campaign_id', function(){ var j = pm.response.json(); pm.expect(j.data.campaign_id).to.exist; });"]}}
      ]
    },
    {
      "name": "In-App - List",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/inapp/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "inapp", "{{userId}}"]
        }
      },
      "event": [
        {"listen":"test","script":{"type":"text/javascript","exec":["pm.test('status 200', function () { pm.response.to.have.status(200); });"]}}
      ]
    },
    {
      "name": "In-App - Mark Read",
      "request": {
        "method": "PATCH",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/inapp/{{inAppId}}?read=true",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "inapp", "{{inAppId}}"],
          "query": [ {"key": "read", "value": "true"} ]
        }
      },
      "event": [
        {"listen":"test","script":{"type":"text/javascript","exec":["pm.test('status 200', function () { pm.response.to.have.status(200); });"]}}
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "if(!pm.collectionVariables.get('idemKey')){ pm.collectionVariables.set('idemKey', 'idem-' + Date.now()); }",
          "if(!pm.collectionVariables.get('scheduledAt')){ var d = new Date(Date.now()+5*60*1000).toISOString(); pm.collectionVariables.set('scheduledAt', d); }"
        ]
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "userId", "value": "1" },
    { "key": "groupId", "value": "1" },
    { "key": "inAppId", "value": "1" },
    { "key": "idemKey", "value": "" },
    { "key": "scheduledAt", "value": "" }
  ]
