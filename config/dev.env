APP_PORT=8080

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
# Accept both standard and JDBC-style; Config prefers JDBC_POSTGRES_URL if present
POSTGRES_DSN=postgres://postgres:postgres@localhost:5432/postgres?sslmode=disable
JDBC_POSTGRES_URL=jdbc:postgresql://localhost:5432/postgres

# Kafka
KAFKA_BROKERS=localhost:19092
KAFKA_TOPIC=notifications

# Redis
REDIS_URL=redis://localhost:6379
JDBC_REDIS_URL=jdbc:redis://localhost:6379

# run command: APP_ENV=dev go run ./cmd/server/main.go
