    {
      "name": "Notifications - Send (immediate)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Idempotency-Key", "value": "{{idemKey}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": {{userId}},\n  \"type_key\": \"order.confirmed\",\n  \"channels\": [\"inapp\"],\n  \"payload\": { \"order_id\": \"ORD-123\" },\n  \"priority\": \"low\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/notifications",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "notifications"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 200', function () { pm.response.to.have.status(200); });",
              "pm.test('has data array', function () { var json = pm.response.json(); pm.expect(Array.isArray(json.data)).to.be.true; });"
            ]
          }
        }
      ]
    },
    {
      "name": "Preferences - Upsert",
      "request": {
        "method": "POST",
        "header": [ {"key": "Content-Type", "value": "application/json"} ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type_key\": \"promo.offer\",\n  \"channel\": \"sms\",\n  \"opted_in\": false\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/preferences/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "preferences", "{{userId}}"]
        }
      },
      "event": [
        {"listen":"test","script":{"type":"text/javascript","exec":["pm.test('status 200', function () { pm.response.to.have.status(200); });"]}}
      ]
    },
    {
      "name": "DND - Upsert",
